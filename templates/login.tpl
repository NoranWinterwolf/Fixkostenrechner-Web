<div id="loginBox">
    <h2>Login</h2>
    <div class="flexForm">
        <label for="username">User: </label><div class="break"></div>
        <input type="text" id="username" name="username" placeholder="<%>userplaceholder<%>"><div class="break"></div>
        <label for="password">Password: </label><div class="break"></div>
        <input type="password" id="password" name="password" placeholder="<%>passwordplaceholder<%>"><div class="break"></div>
        <button type="button" id="login">Login</button>
        <span>or</span>
        <button type="button" id="register">Register</button>
    </div>
</div>